; train_eval_infer.config
; 2026/02/08 (C) antillia.com
; Glomeruli segmentation

[model]
model         = "TensorFlowFlexUNet"
generator     =  False
image_width    = 512
image_height   = 512
image_channels = 3
input_normalize =True
normalization  = False

num_classes    = 2

base_filters   = 16
base_kernels   = (11,11)
num_layers     = 8
dropout_rate   = 0.05
dilation       = (1,1)

; Model compilation parameters
optimizer       = "Adam"

learning_rate  = 0.00007
clipvalue      = 0.5

; Specify "categorical_crossentropy" function to loss
; for categoraized(one-hot-encoded) mask 

loss           = "categorical_crossentropy"
metrics        = ["dice_coef_multiclass"]

show_summary   = False

[dataset]
class_name    = "ImageCategorizedMaskDataset"

[train]
;epochs       = 50
epochs        = 100
batch_size    = 2

;steps_per_epoch  = 200
;validation_steps = 80

; EarlyStopping parameter
patience      = 10

metrics       = ["dice_coef_multiclass", "val_dice_coef_multiclass"]

model_dir     = "./models/"
eval_dir      = "./eval/"
images_dir    = "../../../dataset/Glomeruli/train/images/"
masks_dir     = "../../../dataset/Glomeruli/train/masks/"

create_backup  = False

; learning_rate_reducer callback parameter
learning_rate_reducer = True
reducer_factor     = 0.5
reducer_patience   = 4

epoch_change_infer     = False
epoch_change_infer_dir =  "./epoch_change_infer"
epoch_change_tiled_infer     = True
epoch_change_tiled_infer_dir =  "./epoch_change_tiled_infer"

; Model saving option
save_weights_only  = True

[valid]
images_dir = "../../../dataset/Glomeruli/valid/images/"
masks_dir  = "../../../dataset/Glomeruli/valid/masks/"

[test] 
images_dir = "../../../dataset/Glomeruli/test/images/"
masks_dir  = "../../../dataset/Glomeruli/test/masks/"

[infer] 
images_dir    = "./mini_test/images/"
output_dir    = "./mini_test_output/"

[tiledinfer] 
overlapping = 64
images_dir    = "./mini_test/images/"
output_dir    = "./mini_test_output_tiled/"

[image]
color_order = "RGB"

[mask]
mask_file_format = ".png"
;Glomeruli 2
;
rgb_map={(0,0,0):0,(255,0,0):1,}
